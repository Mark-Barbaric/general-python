    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "cwd":"${workspaceFolder}",
            "env": {
                "PYTHONPATH": "."
            },
            "envFile": "${workspaceFolder}/.env",
            "module": "pytest",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Flask SQL Alchemy",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/system_design/rest/flask/flask_sqlalchemy/app/__init__.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-reload",
                "--port",
                "5000"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}